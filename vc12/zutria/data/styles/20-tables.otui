Table < UITable
  layout: verticalBox
  header-column-style: HeaderTableColumn
  header-row-style: HeaderTableRow
  column-style: TableColumn
  row-style: TableRow

TableData < UIScrollArea
  layout: verticalBox

TableRow < Label
  layout: horizontalBox
  height: 10
  text-wrap: true

TableColumn < UIButton
  width: 30
  text-wrap: true

TableHeaderRow < Label
  layout: horizontalBox
  height: 10
  text-wrap: true

TableHeaderColumn < Button
  margin-left: 1
  width: 30